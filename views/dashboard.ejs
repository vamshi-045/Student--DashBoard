<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/dashboard/style.css">s">
    <link rel="stylesheet" href="/sidebar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>
<body>
  <%- include('sidebar') %>


    <!-- ---------------------------------------------------------------------------------------------------------------- -->
    <div class="container">
        <nav class="head">
            <div class="lefticon">
                <a class="LINK1" href="#">Student</a>
            </div>
            <div class="righticon">
                <a href="#">
                    <img width="50px" src="/assets/Screenshot 2025-02-23 171952.png">
                </a>
            </div>
        </nav>
        <main>
            <div class="main_con">
                <div class="main_tit">
                    <img src="/assets/hello.svg">
                    <div class="greeting">
                        <h1>Hello <%= name %></h1>
                        <p>Welcome to your dashboard</p>
                    </div>
                    <div class="date-display">
                        <div class="date"></div>
                    </div>
                </div>
                <div class="dashboard-container">
                    <div class="todo-section">
                        <div class="todo-header">
                            <h2>My Tasks</h2>
                            <div class="todo-input">
                                <form action="/addTask" method="post">
                                <input type="text" id="taskInput" name="task" placeholder="Add a new task...">
                                <button type="submit" >Add Task</button>
                                </form>
                            </div>
                        </div>
                        <ul id="taskList" class="task-list">
                            <% for(let i=0;i<list.length;i++){ %>
                                <li>
                                    <span><%= list[i].task %></span>
                                    <div class="task-actions">
                                        <button class="complete-btn" onclick="toggleComplete(this)">âœ“</button>
                                        <form action="/deleteTask" method="post">
                                            <button type="submit" class="delete-btn" name="taskId" value="<%= list[i].id %>">Ã—</button>
                                        </form>
                                    </div>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                    
                    <div class="motivation-section">
                        <div class="motivation-card" id="motivationCard">
                            <div class="quote-emoji" id="quoteEmoji">ðŸŒŸ</div>
                            <div class="quote-text" id="quoteText"><%= quote %></div>
                            <div class="quote-author" id="quoteAuthor"><%= author %></div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script>
        function updateDateTime() {
            const now = new Date();
            
            // Update date
            const dateElement = document.querySelector('.date-display .date');
            dateElement.textContent = now.toLocaleDateString('en-US', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
        }

        // Update immediately and then every second
        updateDateTime();
        setInterval(updateDateTime, 1000);
    </script>

    <script>
        function toggleComplete(button) {
            const li = button.closest('li');
            li.classList.toggle('completed');
        }
    </script>
    <script>
        // Get DOM elements
        const addEventBtn = document.getElementById('addEventBtn');
        const eventForm = document.getElementById('eventForm');
        const submitEvent = document.getElementById('submitEvent');
        const cancelEvent = document.getElementById('cancelEvent');
        const timeSlots = document.querySelector('.time-slots');

        // Toggle event form
        addEventBtn.addEventListener('click', () => {
            eventForm.classList.toggle('hidden');
            addEventBtn.textContent = eventForm.classList.contains('hidden') ? '+ Add Event' : '- Close';
        });

        // Cancel event
        cancelEvent.addEventListener('click', () => {
            eventForm.classList.add('hidden');
            addEventBtn.textContent = '+ Add Event';
            clearForm();
        });

        // Submit event
        submitEvent.addEventListener('click', () => {
            const title = document.getElementById('eventTitle').value;
            const location = document.getElementById('eventLocation').value;
            const time = document.getElementById('eventTime').value;

            if (!title || !location || !time) {
                alert('Please fill in all fields');
                return;
            }

            // Create new time slot
            const timeSlot = document.createElement('div');
            timeSlot.className = 'time-slot';
            timeSlot.innerHTML = `
                <div class="time">${formatTime(time)}</div>
                <div class="event-card">
                    <h3>${title}</h3>
                    <p>${location}</p>
                </div>
            `;

            // Insert the new time slot before the add event section
            const addEventSection = document.querySelector('.add-event-section');
            timeSlots.insertBefore(timeSlot, addEventSection);

            // Clear and hide form
            clearForm();
            eventForm.classList.add('hidden');
            addEventBtn.textContent = '+ Add Event';
        });

        // Helper function to clear form
        function clearForm() {
            document.getElementById('eventTitle').value = '';
            document.getElementById('eventLocation').value = '';
            document.getElementById('eventTime').value = '';
        }

        // Helper function to format time
        function formatTime(time) {
            const [hours, minutes] = time.split(':');
            const date = new Date();
            date.setHours(hours);
            date.setMinutes(minutes);
            return date.toLocaleTimeString('en-US', {
                hour: '2-digit',
                minute: '2-digit',
                hour12: true
            });
        }
    </script>
</body>
</html>