<body>
    <%- include("sidebar.ejs") %>
    <div class="main">
    <h1 class="one">NEW REQUEST</h1>
    <div class="underline"></div>
    <form action="/newrequest" method="post">
        <div class="ce">
            <h1 class="two">Raise a request</h1>
            <div class="form-group">
                <label for="name">Title</label>
                <input type="text" id="name" class="underline-input underline-input2" placeholder="Title" name="name" required>
                <label for="request-type">Request Regarding</label>
                <select id="request-type" class="underline-input underline-input3" name="request-type">
                    <option value="Choose">Choose</option>
                    <option value="Certificate">Certificate</option>
                    <option value="Sick Leave">Sick Leave</option>
                    <option value="Others">Others</option>
                    <option value="Grade Sheet">Grade Sheet</option>
                </select>
                <label for="description">Description</label>
                <textarea name="description" class="underline-input desc underline-input2" placeholder="Your Description here...."
                    id="description" required></textarea>
                    <button class="button" type="submit">
                        Submit <span class="arrow">âžœ</span>
                    </button>
            </div>
        </div>
    </form>
    </div>
   
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#request-type").select2({
                minimumResultsForSearch: 20
            });
        });
    </script>
</body>

